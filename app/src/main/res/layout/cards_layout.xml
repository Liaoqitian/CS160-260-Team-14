<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:tag="cards main container">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="405dp"
        android:layout_height="117dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingBottom="0dp"
        card_view:cardBackgroundColor="#F7F7F7"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="false"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="115dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="108dp"
                android:layout_height="104dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:elevation="0dp">

                    <ImageView
                        android:id="@+id/frameView"
                        android:layout_width="103dp"
                        android:layout_height="103dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="1dp"
                        android:elevation="12dp"
                        card_view:srcCompat="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/authenticStamp"
                        android:layout_width="96dp"
                        android:layout_height="17dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginStart="2dp"
                        android:elevation="13dp"
                        card_view:srcCompat="@android:color/transparent" />

                    <TextView
                        android:id="@+id/authStampText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="2dp"
                        android:elevation="14dp"
                        android:fontFamily="@font/rambla"
                        android:text="authentic"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/transparent"
                        android:textSize="12sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="10dp"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/restaurantPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_alignParentTop="false"
                            android:layout_gravity="center|center_horizontal"
                            android:adjustViewBounds="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/authentic_tag"></ImageView>
                    </androidx.cardview.widget.CardView>


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/restaurantName"
                            android:layout_width="160dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="11dp"
                            android:fontFamily="@font/open_sans"
                            android:text="Restaurant Name"
                            android:textAlignment="viewStart"
                            android:textAllCaps="true"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#676666"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/restaurantDistance"
                            android:layout_width="68dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:textAlignment="viewEnd"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#72D74F"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewUnits2"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="18dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/rambla"
                            android:text="  mi"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#616161"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="vertical">

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="290dp"
                        android:layout_height="17dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="0dp"
                        android:progress="70"
                        android:progressDrawable="@drawable/img"
                        android:saveEnabled="false"
                        android:thumb="@drawable/mexican_flag" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/authBarLabel"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rambla"
                            android:text="authenticity"
                            android:textAlignment="viewStart"
                            android:textAllCaps="true"
                            android:textColor="#6B6B6B"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/restaurantScore"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rambla"
                            android:textAlignment="viewEnd"
                            android:textColor="#6B6B6B" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/rambla"
                            android:text="%"
                            android:textColor="#6B6B6B" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>